{
  "scripts": {
    "start": "npm run clean && npm-run-all copy:* images:* --parallel server:* styles:* scripts:* watch:*",
    "server:browser-sync": "browser-sync start --no-notify --no-open --server --files='**/*.html, dist/**/*'",
    "styles:stylus": "stylus -m -u autoprefixer-stylus -w ./src/css/base.styl -o dist/css/style.css",
    "scripts:babel": "babel -s -w ./src/js/picky.js -o dist/js/picky.js",
    "copy:ractive": "cp ./node_modules/ractive/{ractive.js,ractive.js.map} dist/js/",
    "copy:transitions": "cp ./node_modules/ractive-transitions-fade/dist/ractive-transitions-fade.umd.js dist/js/",
    "copy:jquery": "cp ./node_modules/jquery/dist/jquery.min.js dist/js/",
    "copy:clipboard": "cp ./node_modules/clipboard/dist/clipboard.js dist/js/",
    "copy:analytics": "cp ./src/js/analytics.js dist/js/",
    "copy:images": "cp -R ./src/img dist",
    "copy:picky-highlight": "cp ./node_modules/picky-highlight/dist/{picky-highlight.css,picky-highlight.css.map} ./dist/css/ && cp ./node_modules/picky-highlight/dist/{picky-highlight.js,picky-highlight.js.map} ./dist/js/",
    "images:svgo": "svgo -f dist/img",
    "clean": "rm -drf dist && mkdir -p ./dist/{js,css,img}",
    "format:standard": "standard ./src/js/picky.js | snazzy",
    "precompile": "node ./tasks/precompile.js",
    "watch:templates": "watchman ./src/templates \"npm run precompile\""
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "$",
      "Ractive",
      "Highlight",
      "Clipboard",
      "templates",
      "localStorage"
    ]
  },
  "devDependencies": {
    "autoprefixer-stylus": "^0.9.1",
    "babel-cli": "^6.4.5",
    "babel-eslint": "^5.0.0-beta8",
    "babel-preset-es2015": "^6.3.13",
    "browser-sync": "^2.11.1",
    "npm-run-all": "^1.5.1",
    "pre-commit": "^1.1.2",
    "snazzy": "^2.0.1",
    "standard": "^5.4.1",
    "stylus": "^0.53.0",
    "watchman": "^0.1.8"
  },
  "dependencies": {
    "clipboard": "^1.5.5",
    "jquery": "^2.2.0",
    "picky-highlight": "0.0.1",
    "ractive": "git+https://github.com/ractivejs/ractive.git#edge",
    "ractive-transitions-fade": "^0.3.1",
    "svgo": "^0.6.1"
  },
  "pre-commit": [
    "format:standard"
  ]
}
