{
  "scripts": {
    "start": "./node_modules/npm-run-all/bin/npm-run-all.js copy:* --parallel server:* styles:* scripts:*",
    "server:browser-sync": "./node_modules/browser-sync/bin/browser-sync.js start --no-notify --no-open --server --files='**/*.html, assets/dist/**/*'",
    "styles:stylus": "./node_modules/stylus/bin/stylus -m -u autoprefixer-stylus -w assets/src/css/style.styl -o assets/dist/css",
    "scripts:babel": "./node_modules/babel-cli/bin/babel.js -s -w -d assets/dist/js assets/src/js",
    "copy:data": "cp -R assets/src/data assets/dist"
  },
  "babel": {
    "presets": ["es2015"]
  },
  "devDependencies": {
    "autoprefixer-stylus": "^0.9.1",
    "babel-cli": "^6.4.5",
    "babel-preset-es2015": "^6.3.13",
    "browser-sync": "^2.11.1",
    "npm-run-all": "^1.5.1",
    "stylus": "^0.53.0"
  }
}
